work(){
project=$1
initDevTools=$2
workspace="/var/www"

if [ "$initDevTools" = true ]; then
	sh ~/dev-mat/workspace.sh;
fi

if [ $project ]; then
	if [ -d "$workspace/$project" ]; then
		WID=$(xprop -root | grep "_NET_ACTIVE_WINDOW(WINDOW)"| awk '{print $5}')
		xdotool windowfocus $WID
		xdotool key ctrl+shift+t
		xdotool type "cd /var/www/$project; clear;"
		xdotool key Return
		wmctrl -i -a $WID
		cd /var/www/$project;
		case "$project" in
		'spot-api')
		sudo service apache2 stop
		sudo service postgresql stop
		sudo service mysql stop
		docker stop $(docker ps -a -q)
		docker rm $(docker ps -a -q)
		docker-compose up -d
		;;
		'sigiprc')
		docker stop $(docker ps -a -q)
		docker rm $(docker ps -a -q)
		sudo service apache2 start
		sudo service postgresql start
		grunt;
		;;
		'sigbauru')
		docker stop $(docker ps -a -q)
		docker rm $(docker ps -a -q)
		sudo service apache2 start
		sudo service postgresql start
		grunt;
		;;
		esac
	elif [ "$project" = "default" ]; then
		echo "Bom dia senhor Stark!"
	else
		echo "Projeto n√£o foi encontrado"
	fi
fi

}
eclipse(){
SSLPASS="$(cat ${DEVOPS_SRC_PATH}/auth/.ssl_pass)"
PASSWORD="$(cat ${DEVOPS_SRC_PATH}/auth/.password | openssl enc -aes-256-cbc -a -d -salt -pass pass:$SSLPASS)"
sudo -b -p $PASSWORD -u mateus ~/eclipse/eclipse
}
